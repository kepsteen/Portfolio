---
import Image from "astro/components/Image.astro";
import cody from '../images/cody.png';
import { Stack } from './Stack'
import { TbBrandLinkedin } from "react-icons/tb";
import { Icon } from "./Icon";
import { Github } from "lucide-react";
import { GITHUB_URL } from "../pages/index.astro";
import { LINKEDIN_URL } from "../pages/index.astro";
---

<section id="home" class="bg-whiteblue pt-[20px] sm:pt-[60px]">
	<div class="py-10 px-8 md:flex justify-center gap-4 items-center max-w-[800px] mx-auto">
		<div class="mx-auto flex justify-center items-center">
		<div class="relative inline-flex  group">
			<div class="absolute transition-all duration-1000 opacity-70 -inset-px sm:bg-gradient-to-r from-blue via-aqua to-green rounded-full blur-lg group-hover:opacity-100 group-hover:-inset-1 group-hover:duration-200 animate-tilt"></div>
			<div id="img-wrapper" class="w-[200px] h-[200px] sm:w-[300px] sm:h-[300px] p-4 transition-all delay-75 relative">
				<Image class="shadow-3xl rounded-full w-full h-full object-cover border-4 border-white" src={cody} alt="picture of cody" />
			</div>
		</div>
	</div>
	<div class="text-center my-5 px-8">
		<h2 class="text-4xl font-extrabold mb-2 font-mono">Hi, I'm Cody <span class="animate-wave inline-block">ğŸ‘‹ğŸ¼</span></h2>
		<h3 class="text-2xl">I'm a Full-Stack Developer specializing in <strong>React</strong> based in Irvine, CA.ğŸ“</h3>
		<div class="flex justify-center items-center gap-2 mt-4">
			<Icon client:load href={GITHUB_URL}>
				<Github size={28} className="icon"/>
			</Icon>
			<Icon client:load href={LINKEDIN_URL}>
				<TbBrandLinkedin size={32} className="icon"/>
			</Icon>
			
		</div>
		<div class="mt-4 sm:mt-10">
		<Stack client:only/>
	</div>
	</div>
	</div>
	
	
</section>

