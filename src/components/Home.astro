---
import Image from "astro/components/Image.astro";
import cody from '../images/cody.png';
---

<section id="home" class="py-[50px]">
			<div class="mx-auto flex justify-center items-center">
				<div class="relative inline-flex  group">
					<div class="absolute transition-all duration-1000 opacity-70 -inset-px bg-gradient-to-r from-[#2FA4B2] via-[#2FB27F] to-[#34D544] rounded-full blur-lg group-hover:opacity-100 group-hover:-inset-1 group-hover:duration-200 animate-tilt"></div>
					<div id="img-wrapper" class="w-[200px] h-[200px] sm:w-[300px] sm:h-[300px] transition-all delay-75 relative">
						<Image class="rounded-full w-full h-full object-cover border-4 border-white" src={cody} alt="picture of cody" />
					</div>
				</div>
			</div>
		</section>